{% extends 'template.twig' %}

{% block content %}
        <div class="row">
                <div class="col-lg-offset-3 col-lg-3">
                <div class="panel panel-default">
                    <h3>Total processes <span class="label label-default">{{ allProcesses|length }}</span></h3>
                <a href="/?layout=global">View all processes</a>
                </div>
                </div>
                <div class="col-lg-3">
                <div class="panel panel-default">
                    <h3>Stopped <span class="label label-danger">{{ stopped }}</span></h3>
                <a href="/?layout=global&filter=state&amp;filter_value=STOPPED">View stopped processes</a>
                </div>
                </div>
        </div>
        <div class="row">
                <div class="col-lg-offset-3 col-lg-3">
                    <div class="panel panel-default">
                    <h3>Hosts <span class="label label-default">{{ hosts|length }}</span></h3>
                    <ul>
                    {% for host in hosts %}
                        <li> <a href="/?layout=global&amp;filter=host&amp;filter_value={{host}}">{{ host }}</a></li>
                    {% endfor %}
                    </ul>
                    </div>
                </div>
                <div class="col-lg-3">
                    <div class="panel panel-default">
                    <h3>Groups <span class="label label-default">{{ groups|length }}</span></h3>
                    <ul>
                    {% for group in groups %}
                        <li><a href="/?layout=global&amp;filter=group&amp;filter_value={{ group }}">{{ group }}</a></li>
                    {% endfor %}
                    </ul>
                    </div>
                </div>
        </div>
{% endblock %}

